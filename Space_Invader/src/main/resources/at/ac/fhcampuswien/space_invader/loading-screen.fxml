<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.ac.fhcampuswien.space_invader.LoadingScreenController"
      prefHeight="400.0"
      prefWidth="400.0"
      style="-fx-background-color: #000000;"> <!-- Hintergrundfarbe -->

    <Pane prefHeight="40.0" prefWidth="400.0">
        <Label text="Space Invader" style="-fx-font-size: 24px; -fx-text-fill: white;" />
    </Pane>

    <Pane prefHeight="360.0" prefWidth="400.0">
        <HBox alignment="CENTER" spacing="20" prefHeight="360.0" prefWidth="400.0">
            <ProgressIndicator fx:id="progressIndicator" />
            <TextField fx:id="nameTextField" promptText="Enter Player Name" style="-fx-background-color: white;" />
            <Button fx:id="button" onAction="#handleButtonClick" prefHeight="43.0" prefWidth="111.0" text="Start Game" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </HBox>
        <Label text="Loading..." style="-fx-text-fill: white;" />
    </Pane>

</VBox>
